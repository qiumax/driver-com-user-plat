    body
        div#wrap
            div.navbar.navbar-fixed-top
                div.navbar-inner
                    div.container-fluid
                        div.logo
                            image(src="/assets/img/logo.png" style="height:30px;")

                        div.top-menu.visible-desktop
                            ul.pull-left
                                li
                                    a
                                        三一老司机发货平台

                        div.top-menu.visible-desktop
