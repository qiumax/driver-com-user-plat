                              span 运单管理

                          div#collapse3.accordion-body.collapse
                            div.accordion-inner
                              a.accordion-toggle(href="/api/order/all")
                                i.icon-circle(style="padding:0 8px;")
                                运单列表
                              a.accordion-toggle(href="/api/order/finish")
                                i.icon-circle(style="padding:0 8px;")
                                已完成
                              a.accordion-toggle(href="/api/need/all")
                                i.icon-circle(style="padding:0 8px;")
                                待接单

                div.main_container#dashboard_page
                    block content
script.
    var pathname = self.location.pathname
    var actived = document.querySelector("a[href='"+ pathname+"']")
    if(actived){
        actived.className += ' active b_F79999'
    }

    console.log(pathname.indexOf("order"))
    console.log(pathname.indexOf("need"))
    if(pathname.indexOf("order") !=-1 || pathname.indexOf("need") !=-1)
    {
        $("#collapse3")[0].style.height="auto"
        console.log("3")
    }
    else if(pathname.indexOf('account') !=-1){
        $("#collapse2")[0].style.height="auto"
        console.log('2')
    }
    else if(pathname.indexOf('company') !=-1) {
        $("#collapse1")[0].style.height = "auto"
        console.log('1')
    }
